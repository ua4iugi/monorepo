---
import BaseLayout from "../../layouts/BaseLayout.astro";
const posts = await Astro.glob("../posts/*.md");
const tags = [...new Set(posts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>
  <header>
    {
      tags.map((tag) => (
        <a href={`/tags/${tag}`}>
          <i>{tag}</i>
        </a>
      ))
    }
  </header>
</BaseLayout>
